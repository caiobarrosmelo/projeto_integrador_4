# ============================================
# Configurações do Sistema de Monitoramento IoT
# ============================================
# Copie este arquivo para .env e preencha com seus valores
# Comando: cp env.example .env

# Banco de Dados PostgreSQL (desenvolvimento local)
DB_HOST=localhost
DB_NAME=bus_monitoring
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# API Flask
# Padrão: http://0.0.0.0:3000
# Se você alterar a porta aqui, lembre-se de atualizar também
# a variável NEXT_PUBLIC_API_URL no frontend (client/.env.local).
API_HOST=0.0.0.0
API_PORT=3000
DEBUG=True

# Segurança
SECRET_KEY=your-secret-key-here-change-in-production

# Logging
LOG_LEVEL=INFO
LOG_FILE=server.log

# CORS - Origens permitidas (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Redis (opcional - para cache)
REDIS_URL=redis://localhost:6379/0

# Machine Learning
YOLO_MODEL_PATH=ml/yolov5
ML_CONFIDENCE_THRESHOLD=0.5

# OSRM (opcional)
OSRM_SERVER_URL=http://router.project-osrm.org

